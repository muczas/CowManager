@model CowManagerApp.MVC.Models.CowDiag

<h2>@Model.Cow.Name</h2>
<p>Comments: @Model.Cow.Comment</p>

<h3>Diagnoses</h3>
<div>
    @Html.ActionLink("Add Diagnosis", "DiagAdd", "Cow", new { id = Model.Cow.Id }, new { @class = "btn btn-primary" })
</div>
@if (Model.Diagnoses.Any())
{
    <ul>
        @foreach (var diagnosis in Model.Diagnoses)
        {
            <li>
                Disease: @diagnosis.NameOfDisease
                <br />
                Comment: @diagnosis.Comment
                <br />
                <a asp-action="TreatForDiag" asp-controller="Cow" asp-route-idd="@diagnosis.Id" asp-route-idk="@Model.Cow.Id" >Treatment</a>
                <a asp-action="DiseaseDetails" asp-controller="Disease" asp-route-id="@diagnosis.Iddisease">Details</a>
                <a asp-action="DiagRemove" asp-route-id="@diagnosis.Id">Delete</a>
                <a asp-action="DiagEdit" asp-route-id="@diagnosis.Id">Edit</a>
            </li>
        }
    </ul>
}
else
{
    <p>No diagnoses found for this cow.</p>
}
